{
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
              }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "ENVIRONMENT": "dev",
        "DEV_POSTGRES_URL": "@DEV_POSTGRES_URL",
        "PROD_POSTGRES_URL": "PROD_POSTGRES_URL",
        "DISCORD_WEBHOOK_URL": "DISCORD_WEBHOOK_URL"
    },
    "buildCommand": "python apply_migrations.py && pip install -r requirements.txt"
}